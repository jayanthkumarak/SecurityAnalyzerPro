{
  "name": "forensic-analyzer-pro",
  "version": "1.0.0",
  "description": "AI-powered digital forensics platform - Web Application",
  "private": true,
  "author": {
    "name": "Jayanth Kumar",
    "email": "jayanthkumarak@gmail.com",
    "url": "https://github.com/jayanthkumarak"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jayanthkumarak/SecurityAnalyzerPro.git"
  },
  "bugs": {
    "url": "https://github.com/jayanthkumarak/SecurityAnalyzerPro/issues"
  },
  "keywords": [
    "forensics",
    "security",
    "ai",
    "web-application",
    "threat-intelligence",
    "incident-response",
    "digital-forensics"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "concurrently \"bun run dev:api\" \"bun run dev:web\"",
    "dev:web": "bun --cwd web run dev",
    "dev:api": "bun --cwd api run dev",
    "build": "bun run build:api && bun run build:web",
    "build:web": "bun --cwd web run build",
    "build:api": "bun --cwd api run build",
    "start": "concurrently \"bun run start:api\" \"bun run start:web\"",
    "start:web": "bun --cwd web run preview",
    "start:api": "bun --cwd api run start",
    "test": "bun --cwd web run test && bun --cwd api run test",
    "lint": "bun --cwd web run lint && bun --cwd api run lint",
    "clean": "rm -rf web/dist api/dist web/node_modules api/node_modules node_modules"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "web",
    "api"
  ]
}
